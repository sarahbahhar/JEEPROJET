<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Model.Moderateur" table="moderateur" schema="projet_jee">
        <id name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </id>
        <property name="peutAjouterProduit">
            <column name="peut_ajouter_produit" sql-type="tinyint(1)"/>
        </property>
        <property name="peutSupprimerProduit">
            <column name="peut_supprimer_produit" sql-type="tinyint(1)"/>
        </property>
        <property name="maxProduitsLigne">
            <column name="max_produits_ligne" sql-type="int"/>
        </property>
        <property name="nbBannissement">
            <column name="nbBannissement" sql-type="int"/>
        </property>
        <property name="dateBanni">
            <column name="dateBanni" sql-type="date" not-null="true"/>
        </property>
        <property name="motifBannissement">
            <column name="motifBannissement" sql-type="text" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>