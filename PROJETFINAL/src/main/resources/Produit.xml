<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="Model.Produit">
        <table name="produit" schema="projet_jee" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="titre">
                <column name="titre"/>
            </basic>
            <basic name="description">
                <column name="description"/>
            </basic>
            <basic name="stock">
                <column name="stock" precision="-1"/>
            </basic>
            <basic name="email">
                <column name="email" length="100"/>
            </basic>
            <basic name="nomImage">
                <column name="nomImage" length="50"/>
            </basic>
            <basic name="miniDescription">
                <column name="miniDescription" length="200"/>
            </basic>
            <basic name="prix">
                <column name="prix" precision="2"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
