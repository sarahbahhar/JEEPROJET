<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Model.Commande" table="commande" schema="projet_jee">
        <id name="numero">
            <column name="numero" sql-type="int"/>
        </id>
        <property name="dateDePaiement">
            <column name="dateDePaiement" sql-type="date"/>
        </property>
        <property name="total">
            <column name="total" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>