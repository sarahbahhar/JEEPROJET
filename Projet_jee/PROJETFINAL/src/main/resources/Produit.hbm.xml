<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Model.Produit" table="produit" schema="projet_jee">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="titre">
            <column name="titre" sql-type="varchar(255)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text"/>
        </property>
        <property name="stock">
            <column name="stock" sql-type="int"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="nomImage">
            <column name="nomImage" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="miniDescription">
            <column name="miniDescription" sql-type="varchar(200)" length="200"/>
        </property>
        <property name="prix">
            <column name="prix" sql-type="decimal(10,2)" precision="10" scale="2"/>
        </property>
        <property name="categorie">
            <column name="categorie" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>