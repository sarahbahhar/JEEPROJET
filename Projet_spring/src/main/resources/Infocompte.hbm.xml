<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Model.Infocompte" table="infocompte" schema="projet_jee">
        <id name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </id>
        <property name="prenom">
            <column name="prenom" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="nom">
            <column name="nom" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="dateNaissance">
            <column name="dateNaissance" sql-type="date"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="adresse">
            <column name="adresse" sql-type="varchar(250)" length="250"/>
        </property>
        <property name="ville">
            <column name="ville" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="codePostal">
            <column name="codePostal" sql-type="int"/>
        </property>
        <property name="pays">
            <column name="pays" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>